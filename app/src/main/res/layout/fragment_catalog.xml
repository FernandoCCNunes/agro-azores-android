<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.CatalogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_top_white_background"
        android:elevation="25dp">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:alignItems="center"
            app:flexWrap="nowrap"
            app:justifyContent="space_evenly">

            <TextView
                android:id="@+id/forSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="À venda"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/inProduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Em produção"
                android:textStyle="bold"
                android:textColor="@color/black_54"
                android:textSize="18sp"/>

        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addProductBtn"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="Adicionar Novo Produto"
            android:textColor="@color/colorPrimaryDark"
            app:backgroundTint="@color/light_button_background"
            app:strokeWidth="1dp"
            app:strokeColor="@color/colorPrimaryDark"
            app:icon="@drawable/ic_outline_edit_24"
            app:iconTint="@color/colorPrimaryDark"
            app:iconGravity="end"
            android:visibility="gone"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>