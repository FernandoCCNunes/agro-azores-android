<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.CatalogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_top_white_background"
        android:elevation="25dp">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/viewPagerTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabGravity="fill"
            android:background="@drawable/round_top_white_background"
            app:tabSelectedTextColor="@color/colorPrimaryDark"
            app:tabIndicatorColor="@color/colorPrimaryDark"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addProductBtn"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="Adicionar Novo Produto"
            android:textColor="@color/colorPrimaryDark"
            app:backgroundTint="@color/light_button_background"
            app:strokeWidth="1dp"
            app:strokeColor="@color/colorPrimaryDark"
            app:icon="@drawable/ic_outline_edit_24"
            app:iconTint="@color/colorPrimaryDark"
            app:iconGravity="end"
            android:visibility="gone"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:id="@+id/selectProductContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:gravity="start|center_vertical"
                android:text="Produto:"
                android:textStyle="bold"
                android:layout_marginStart="16dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:cardCornerRadius="8dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/black_54"
                android:background="@color/colorBlack3Percent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <tech.hibk.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/products"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    app:dialogTitle="Selecionar produto"
                    app:cancelButtonColor="@color/colorPrimaryDark"
                    app:cancelButtontext="Fechar"
                    app:onlyLightTheme="false"
                    app:nothingSelectedText="Selecionar Produto"/>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:gravity="start|center_vertical"
                android:text="Filtro:"
                android:textStyle="bold"
                android:layout_marginStart="16dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:cardCornerRadius="8dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/black_54"
                android:background="@color/colorBlack3Percent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <tech.hibk.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/filters"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    app:dialogTitle="Selecionar filtro"
                    app:cancelButtonColor="@color/colorPrimaryDark"
                    app:cancelButtontext="Fechar"
                    app:onlyLightTheme="false"
                    app:nothingSelectedText="Selecionar filtro"/>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>